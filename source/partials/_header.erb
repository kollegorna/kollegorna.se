<header class="header" role="banner" id="header">

  <div class="header__logo">
    <a href="/<%= I18n.locale %>/">
      <svg><use xlink:href="<%= image_path("sprite.svg") %>#icon-logo"></use></svg>
    </a>
  </div>

  <div class="header__button" id="nav-toggler">
    <a href="#header" role="button" title="<%= t(:nav)[:nav_show] %>">
      <%= t(:nav)[:nav_show] %><span></span>
    </a>
    <a href="#nav-toggler" role="button" title="<%= t(:nav)[:nav_hide] %>">
      <%= t(:nav)[:nav_hide] %><span></span>
    </a>
  </div>

  <nav class="header__navigation">
    <a href="/<%= I18n.locale %>/<%= t(:paths)[:work] %>/"><%= t(:nav)[:work] %></a>
    <a href="/<%= I18n.locale %>/<%= t(:paths)[:about] %>/"><%= t(:nav)[:about] %></a>
    <a href="/<%= I18n.locale %>/<%= t(:paths)[:colleagues] %>/"><%= t(:nav)[:colleagues] %></a>
  </nav>

  <div class="header__lang" id="header-lang">
    <a href="#header-lang" role="button" title="<%= t(:lang)[:show] %>" aria-label="<%= t(:lang)[:show] %>" id="header-lang-tgl">
      <svg><use xlink:href="<%= image_path("sprite.svg") %>#icon-lang"></use></svg>
    </a>
    <a id="#header-lang-tgl" role="button" title="<%= t(:lang)[:hide] %>" aria-label="<%= t(:lang)[:hide] %>">
      <svg><use xlink:href="<%= image_path("sprite.svg") %>#icon-lang"></use></svg>
    </a>
    <div class="header__lang__picker">
      <ul>
        <li<% if I18n.locale == :sv %> class="is-selected"<% end %>><a href="/sv/">Svenska</a></li>
        <li<% if I18n.locale == :en %> class="is-selected"<% end %>><a href="/en/">English</a></li>
        <li<% if I18n.locale == :ar %> class="is-selected"<% end %>><a class="ar" href="/ar/">العربية</a></li>
      </ul>
    </div>
  </div>

</header>
