<a href="/work/vembi/">
  <article class="block block--case-study <%= defined?(full_width) ? "full" : "" %>" style="background: <%= defined?(background_color) ? background_color : "#000000" %>; color: <%= defined?(text_color) ? text_color : "#FFFFFF" %>;">
    <div class="block__text">
      <p class="category">Case Study<%= defined?(title) ? " > #{title}" : "" %></p>
      <h3><%= text %></h3>
    </div>

    <% if defined?(image) %>
      <div class="block__image">
        <%= image_tag(image) %>
      </div>
    <% end %>
  </article>
</a>
