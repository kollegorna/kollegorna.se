<article class="block block--blog <%= defined?(full_width) ? "full" : "" %>">
  <div class="block__text">
    <p class="category">Blog</p>
    <h3><%= title %></h3>
    <p><%= text %></p>
  </div>

  <% if defined?(image) %>
    <div class="block__image">
      <%= image_tag(image) %>
    </div>
  <% end %>
</article>
